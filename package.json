{
  "name": "celluloid",
  "version": "3.3.3",
  "author": "Younes Benaomar <younes.benaomar@gmail.com>",
  "license": "MIT",
  "description": "Celluloid helps students and teachers to interact by annotating online educational videos",
  "repository": "http://github.com/celluloid-edu/celluloid",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "typescript": "^5.9.3",
      "react": "19.2.3",
      "react-dom": "19.2.3",
      "@types/react": "19.2.3",
      "@types/react-dom": "19.2.3",
      "zod": "^3.23.8",
      "better-auth": "^1.2.4",
      "@t3-oss/env-core": "^0.12.0",
      "prisma": "7.2.0",
      "@prisma/client": "7.2.0"
    }
  },
  "scripts": {
    "dev": "dotenv -- turbo watch dev --continue",
    "clean": "turbo clean",
    "build": "SKIP_ENV_VALIDATIONS=true turbo run build --no-cache",
    "lint": "biome check --fix",
    "test": "bun run playwright test",
    "test:codegen": "bun run playwright codegen http://localhost:3000",
    "--shortcuts to run commands in workspaces--": "",
    "web": "dotenv -- bun --filter web",
    "worker": "dotenv -- bun --filter worker",
    "auth": "dotenv -- bun --filter auth",
    "db": "dotenv -- bun --filter @celluloid/db",
    "vision": "dotenv -- bun --filter @celluloid/vision",
    "-- db commands--": "",
    "db:generate": "turbo run db:generate",
    "db:migrate:dev": "cd packages/db && bunx prisma migrate dev",
    "db:migrate:deploy": "cd packages/db && bunx prisma migrate deploy",
    "db:migrate:reset": "cd packages/db && bunx prisma migrate reset",
    "db:seed": "cd packages/db && bunx prisma db seed",
    "db:studio": "cd packages/db && bunx prisma studio",
    "--docker commands--": "",
    "docker:bake": "docker buildx bake",
    "docker:web:run": "docker run -it --rm --env-file .env -p 3000:3000 celluloid-web",
    "docker:worker:run": "docker run -it --rm --env-file .env celluloid-worker",
    "release": "bun run release-it",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.52.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/bun": "latest",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "git-format-staged": "^3.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "mock-req": "^0.2.0",
    "mock-res": "^0.5.0",
    "prettier": "^3.0.3",
    "release-it": "^19.0.5",
    "release-it-pnpm": "^4.6.6",
    "rimraf": "^6.0.1",
    "start-server-and-test": "^2.0.1",
    "tsup": "^8.3.0",
    "turbo": "^2.7.3",
    "typescript": "catalog:",
    "wait-port": "^1.1.0"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "abort-controller": "^3.0.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "node-fetch": "2"
  },
  "overrides": {
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "typescript": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "packageManager": "bun@1.3.2"
}
