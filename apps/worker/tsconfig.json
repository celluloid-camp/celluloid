{
  "extends": "@celluloid/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "lib": [
      "ES2022"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@celluloid/*": [
        "../../packages/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ]
}
