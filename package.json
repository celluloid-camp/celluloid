{
  "name": "celluloid",
  "version": "3.5.0",
  "author": "Younes Benaomar <younes.benaomar@gmail.com>",
  "license": "MIT",
  "description": "Celluloid helps students and teachers to interact by annotating online educational videos",
  "repository": "http://github.com/celluloid-edu/celluloid",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "clean": "turbo run clean",
    "build": "turbo run build --no-cache",
    "lint": "biome check --fix",
    "prepare": "husky",
    "test": "bunx playwright test",
    "test:codegen": "bunx playwright codegen http://localhost:3000",
    "--shortcuts to run commands in workspaces--": "",
    "web": "dotenv -- bun run --filter web",
    "auth": "dotenv -- bun run --filter auth",
    "db": "dotenv -- bun run --filter @celluloid/db",
    "vision": "dotenv -- bun run --filter @celluloid/vision",
    "docker:build": "docker buildx build -f apps/web/Dockerfile -t celluloid-web .",
    "docker:run": "docker run -it --rm --env-file ./apps/web/.env -p 3000:3000 celluloid-web",
    "release": "bun run release-it"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.52.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "git-format-staged": "^3.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "mock-req": "^0.2.0",
    "mock-res": "^0.5.0",
    "prettier": "^3.0.3",
    "release-it": "^19.0.5",
    "rimraf": "^6.0.1",
    "start-server-and-test": "^2.0.1",
    "tsup": "^8.3.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "wait-port": "^1.1.0"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "abort-controller": "^3.0.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "node-fetch": "2"
  },
  "packageManager": "bun@1.3.8",
  "trustedDependencies": [
    "@parcel/watcher",
    "@prisma/client",
    "@prisma/engines",
    "@swc/core",
    "@tailwindcss/oxide",
    "canvas",
    "core-js",
    "esbuild",
    "prisma",
    "protobufjs",
    "sharp",
    "vue-demi"
  ],
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ]
}
