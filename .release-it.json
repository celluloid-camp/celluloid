{
  "git": {
    "commitMessage": "ðŸ”– Release ${version}",
    "commitsPath": ".",
    "push": true,
    "requireCommits": false,
    "requireCommitsFail": false,
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "${version}",
    "comments": {
      "submit": true
    }
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  },
  "npm": {
    "publish": false
  }
}
