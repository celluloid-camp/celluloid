{
  "name": "celluloid",
  "version": "3.3.0-0",
  "author": "Younes Benaomar <younes.benaomar@gmail.com>",
  "license": "MIT",
  "description": "Celluloid helps students and teachers to interact by annotating online educational videos",
  "repository": "http://github.com/celluloid-edu/celluloid",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "dotenv -- turbo watch dev --continue",
    "clean": "turbo clean",
    "build": "SKIP_ENV_VALIDATIONS=true turbo run build --no-cache",
    "lint": "biome check --fix",
    "prepare": "husky",
    "test": "pnpm exec playwright test",
    "test:codegen": "pnpm exec playwright codegen http://localhost:3000",
    "--shortcuts to run commands in workspaces--": "",
    "web": "dotenv -- pnpm --filter web",
    "worker": "dotenv -- pnpm --filter worker",
    "auth": "dotenv -- pnpm --filter auth",
    "prisma": "dotenv -- pnpm --filter @celluloid/prisma",
    "docker:bake": "docker buildx bake",
    "docker:web:run": "docker run -it --rm --env-file .env -p 3000:3000 celluloid-web",
    "docker:worker:run": "docker run -it --rm --env-file .env celluloid-worker"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@playwright/test": "^1.52.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "git-format-staged": "^3.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "mock-req": "^0.2.0",
    "mock-res": "^0.5.0",
    "prettier": "^3.0.3",
    "release-it": "^19.0.3",
    "release-it-pnpm": "^4.6.6",
    "rimraf": "^6.0.1",
    "start-server-and-test": "^2.0.1",
    "tsup": "^8.3.0",
    "turbo": "^2.5.0",
    "typescript": "catalog:",
    "wait-port": "^1.1.0"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "abort-controller": "^3.0.0",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "node-fetch": "2"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
