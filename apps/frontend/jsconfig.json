{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~components/*": [
                "src/components/*"
            ],
            "~hooks/*": [
                "src/hooks/*"
            ],
            "~images/*": [
                "src/images/*"
            ],
            "~locales/*": [
                "src/locales/*"
            ],
            "~pages/*": [
                "src/pages/*"
            ],
            "~services/*": [
                "src/services/*"
            ],
            "~theme/*": [
                "src/theme/*"
            ],
            "~utils/*": [
                "src/utils/*"
            ],
            "~/*": [
                "src/*"
            ],
            "~state/*": [
                "src/state/*"
            ],
            "~recoil/*": [
                "src/state/recoil/*"
            ]
        }
    }
}