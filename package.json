{
  "name": "celluloid",
  "version": "3.5.0",
  "author": "Younes Benaomar <younes.benaomar@gmail.com>",
  "repository": "http://github.com/celluloid-edu/celluloid",
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.52.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "git-format-staged": "^3.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "mock-req": "^0.2.0",
    "mock-res": "^0.5.0",
    "prettier": "^3.0.3",
    "release-it": "^19.0.5",
    "rimraf": "^6.0.1",
    "start-server-and-test": "^2.0.1",
    "tsup": "^8.3.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "wait-port": "^1.1.0"
  },
  "catalog": {
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "7.4.0",
    "@prisma/client-runtime-utils": "^7.4.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@trpc/server": "^11.10.0",
    "@types/node": "^22.14.1",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "bcryptjs": "^2.4.3",
    "better-auth": "^1.4.18",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "lodash": "^4.17.23",
    "notistack": "^3.0.2",
    "prisma": "7.4.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "rimraf": "^6.1.2",
    "server-only": "^0.0.1",
    "superjson": "^2.2.6",
    "trpc-to-openapi": "^2.4.0",
    "tsup": "^8.3.0",
    "typescript": "^5.9.3",
    "workflow": "4.1.0-beta.57",
    "zod": "^4.3.6"
  },
  "description": "Celluloid helps students and teachers to interact by annotating online educational videos",
  "engines": {
    "node": ">=20"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "license": "MIT",
  "packageManager": "bun@1.3.8",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "clean:all": "turbo run clean && git clean -xdf .cache .turbo dist node_modules ",
    "build": "turbo run build --no-cache",
    "lint": "biome check --fix",
    "prepare": "husky",
    "test": "bunx playwright test",
    "test:codegen": "bunx playwright codegen http://localhost:3000",
    "--shortcuts to run commands in workspaces--": "",
    "web": "bun run --filter web",
    "auth": "bun run --filter auth",
    "db": "bun run --filter @celluloid/db",
    "vision": "bun run --filter @celluloid/vision",
    "docker:build": "docker buildx build -f apps/web/Dockerfile -t celluloid-web .",
    "docker:run": "docker run -it --rm --env-file ./apps/web/.env -p 3000:3000 celluloid-web",
    "release": "bun run release-it"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "@prisma/client",
    "@prisma/engines",
    "@swc/core",
    "@tailwindcss/oxide",
    "canvas",
    "core-js",
    "esbuild",
    "prisma",
    "protobufjs",
    "sharp",
    "vue-demi"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@workflow/world-postgres": "^4.1.0-beta.34"
  }
}
