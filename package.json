{
  "name": "celluloid",
  "version": "3.1.1",
  "author": "Younes Benaomar <younes.benaomar@gmail.com>",
  "license": "MIT",
  "description": "Celluloid helps students and teachers to interact by annotating online educational videos",
  "repository": "http://github.com/celluloid-edu/celluloid",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "dotenv -- turbo watch dev --continue",
    "clean": "turbo clean",
    "build": "SKIP_ENV_VALIDATIONS=true turbo run build --no-cache",
    "lint": "biome check --fix",
    "prepare": "husky install",
    "test": "npx playwright test",
    "--shortcuts to run commands in workspaces--": "",
    "web": "dotenv -- pnpm --filter web",
    "worker": "dotenv -- pnpm --filter worker",
    "auth": "dotenv -- pnpm --filter auth",
    "prisma": "dotenv -- pnpm --filter @celluloid/prisma",
    "docker:web:build": "docker buildx build --target=web --build-arg NODE_ENV=production --build-arg NEXT_PUBLIC_VERSION_TAG=latest -t celluloid-web .",
    "docker:web:run": "docker run -it --rm --env-file .env -p 3000:3000 celluloid-web",
    "docker:worker:build": "docker buildx build --target=worker --build-arg NODE_ENV=production -t celluloid-worker .",
    "docker:worker:run": "docker run -it --rm --env-file .env celluloid-worker"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@playwright/test": "^1.39.0",
    "@types/jest": "^26.0.23",
    "husky": "^8.0.3",
    "jest": "^27.0.1",
    "lint-staged": "^14.0.1",
    "mock-req": "^0.2.0",
    "mock-res": "^0.5.0",
    "prettier": "^3.0.3",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^2.0.1",
    "ts-jest": "^27.0.1",
    "tsup": "^8.3.0",
    "turbo": "^2.3.3",
    "typescript": "catalog:",
    "wait-port": "^1.1.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "proseWrap": "always",
    "overrides": [
      {
        "files": [
          "*.yml",
          "*.yaml"
        ],
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": "biome check --cache --fix",
    "*.{js,css,md,ts,tsx,jsx}": "biome format --write"
  },
  "dependencies": {
    "abort-controller": "^3.0.0",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "node-fetch": "2"
  },
  "packageManager": "pnpm@9.15.0"
}
