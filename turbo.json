{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {},
    "dev": {
      "dependsOn": [
        "^dev"
      ],
      "cache": false,
      "persistent": false
    },
    "//clean": {
      "cache": false
    },
    "clean": {
      "cache": false,
      "dependsOn": [
        "^clean"
      ]
    }
  },
  "globalEnv": [
    "BASE_URL",
    "NODE_ENV",
    "DATABASE_URL",
    "REDIS_URL",
    "STORAGE_URL",
    "STORAGE_BUCKET",
    "STORAGE_ACCESS_KEY",
    "STORAGE_SECRET_KEY",
    "BETTER_AUTH_SECRET",
    "BETTER_AUTH_URL",
    "SMTP_HOST",
    "SMTP_PORT",
    "SMTP_SECURE",
    "SMTP_USER",
    "SMTP_PASSWORD",
    "SMTP_EMAIL_FROM",
    "SKIP_ENV_VALIDATIONS"
  ],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "CI",
    "npm_lifecycle_event"
  ]
}
