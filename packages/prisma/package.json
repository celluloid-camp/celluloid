{
  "name": "@celluloid/prisma",
  "version": "3.0.0",
  "license": "MIT",
  "private": true,
  "homepage": "https://celluloid.huma-num.fr",
  "repository": {
    "type": "git",
    "url": "https://github.com/celluloid-camp/celluloid.git",
    "directory": "packages/prisma"
  },
  "bugs": {
    "url": "https://github.com/udecode/plate/celluloid/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "prisma": {
    "schema": "schema.prisma",
    "seed": "tsx src/seed.ts"
  },
  "scripts": {
    "build": "pnpm run generate && tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "setup": "pnpm db:push && pnpm migrate:init && migrate:deploy && pnpm generate",
    "migrate": "pnpm prisma migrate",
    "db": "pnpm prisma db",
    "migrate:init": "pnpm prisma migrate resolve --applied 0_init",
    "migrate:deploy": "pnpm prisma migrate deploy",
    "migrate:dev": "pnpm prisma migrate dev",
    "db:push": "pnpm prisma db push",
    "seed": "tsx src/seed.ts",
    "generate": "pnpm prisma generate",
    "lint": "eslint \"src/**/*.ts\"",
    "prebuild": "pnpm run generate",
    "predev": "pnpm run generate",
    "studio": "pnpm prisma studio",
    "prisma": "pnpx prisma",
    "update-metadata": "tsx ./src/update-metadata.ts",
    "migrate-sharecode": "tsx ./src/migrate-sharecode.ts",
    "tsx": "tsx"
  },
  "devDependencies": {
    "@celluloid/config": "workspace:*",
    "@celluloid/utils": "workspace:*",
    "@types/dotenv": "^6.0.0",
    "@types/node-fetch": "^2.6.7",
    "@types/randomcolor": "^0.5.7",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.50.0",
    "prisma": "^6.0.1",
    "rimraf": "^5.0.1",
    "tsup": "^8.3.0",
    "typescript": "catalog:"
  },
  "dependencies": {
    "@prisma/client": "^6.0.1",
    "randomcolor": "^0.6.2",
    "tsx": "^4.19.1",
    "zod": "catalog:"
  }
}
